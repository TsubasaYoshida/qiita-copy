%header.header
  .header__container
    %nav.header__nav
      .header__app-name-hamburger-wrapper
        %h1.header__app-name
          = link_to 'Ciita', root_path
        .header__hamburger
          %span.header__hamburger-icon
          %span.header__hamburger-icon
          %span.header__hamburger-icon
      .header__menu
        %ul
          - if current_user
            %li.header__menu-li
              = link_to '投稿する', new_draft_path
            %li.header__menu-li
              = link_to 'マイページ', user_path(current_user.screen_name)
            %li.header__menu-li
              = link_to '下書き一覧', drafts_path
            %li.header__menu-li
              = link_to '設定', edit_settings_profile_path
            %li.header__menu-li
              = link_to 'ログアウト', logout_path, method: :delete
          - else
            %li.header__menu-li
              = link_to 'ユーザー登録', signup_path
            %li.header__menu-li
              = link_to 'ログイン', login_path
